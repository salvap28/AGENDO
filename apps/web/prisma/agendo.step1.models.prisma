model Block {
  id        Int      @id @default(autoincrement())
  title     String
  date      DateTime   // fecha del bloque
  start     String     // HH:mm
  end       String     // HH:mm
  minutes   Int?
  tag       String?
  notes     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Metric {
  id        Int      @id @default(autoincrement())
  key       String
  value     Float
  date      DateTime @default(now())
  createdAt DateTime @default(now())
}

model Insight {
  id        Int      @id @default(autoincrement())
  kind      String
  message   String
  date      DateTime @default(now())
  createdAt DateTime @default(now())
}
